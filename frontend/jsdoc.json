{
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc", "closure"]
  },
  "source": {
    "include": ["src"],
    "includePattern": "\\.(jsx|js|ts|tsx)$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "plugins": ["plugins/markdown", "better-docs/component", "better-docs/typescript"],
  "templates": {
    "better-docs": {
      "name": "Argent Bank"
    }
  },
  "opts": {
    "destination": "docs",
    "recurse": true,
    "encoding": "utf8",

    "readme": "README.md"
  }
}
